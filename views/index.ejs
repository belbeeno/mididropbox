<!-- index.html -->
<head>
    <title>MIDI Jukebox Submission</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="/static/css/sheet.css" rel="stylesheet">
</head>
<body class="text-center">
    <main class="form-signin shadow-lg bg-body rounded">
        <div class="container p-5">
            <h1 class="row mb-4">Upload to the Jukebox</h1>
            <form id="form" class="g-3" action="/upload_files" enctype="multipart/form-data">
                <div class="row mb-3">
                    <label for="textName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" id="textName" class="form-control" aria-label="Name">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="formFile" class="col-sm-2 col-form-label">MIDI</label>
                    <div class="col-sm-10">
                        <input type="file" id="formFile" class="form-control" accept=".mid,.midi" aria-label="MIDI">
                    </div>
                </div>
                <div class="row mb-3">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">
                        <span id="show-on-sending" class="visually-hidden">
                            <span class="spinner-border spinnger-border-sm" role="status" aria-hidden="true"></span>
                            Loading...
                        </span>
                        <span id="hide-on-sending">
                            Send
                        </span>
                    </button>
                </div>
            </form>
            <img src="/static/img/worm.gif" />
        </div>
    </main>
    <script src='/static/js/submit.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>